<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="-30dp"
        app:cardElevation="10dp"
        android:background="@drawable/white_background"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/bottomlayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:elevation="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/enqueryLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    style="?attr/actionButtonStyle"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:clipToPadding="false"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/img_enquiry"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_notification_inactive"/>

                    <TextView
                        android:id="@+id/lead_badge"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right|end|top"
                        android:layout_marginEnd="-12dp"
                        android:layout_marginRight="-1dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/badge_background"
                        android:gravity="center"
                        android:padding="3dp"
                        android:visibility="gone"
                        android:textColor="@android:color/white"
                        android:text="0"
                        android:textSize="8sp"/>

                </FrameLayout>


                <TextView
                    android:id="@+id/txt_enquiry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Business Enquiries"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/enqueryManagerLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp">

                    <ImageView
                        android:id="@+id/img_enquiryManager"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_forword_enquiry_inactive" />

                </FrameLayout>


                <TextView
                    android:id="@+id/txt_leadManager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enquiry Manager"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>



